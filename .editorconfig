# EditorConfig is awesome: https://EditorConfig.org
root = true

[*]
charset = utf-8
indent_size = 2
indent_style = tab
insert_final_newline = true
trim_trailing_whitespace = true

[*.{ls,yml,yaml}]
indent_style = space

[*.{cjs,js,mjs,ts}]
block_comment_start = /*
block_comment = *
block_comment_end = */

[*.{markdown,md}]
indent_style = space
trim_trailing_whitespace = false
